.row
  .col-lg-5.col-lg-offset-1
    - if current_user && current_user == product.user
      %br
      %span
        = link_to edit_category_product_path(category.id, product.id) do
          %i.fa.fa-pencil
          Edit this product

.row
  .col-lg-5.col-lg-offset-1
    .product
      %h2= product.title.humanize
      %p
        = product.description
      .row
        .col-lg-4.col-sm-6
          %span
            %h4
              %i.fa.fa-dollar.fa-1x
              = product.price
        .col-lg-6.col-sm-6
          %span
            = link_to product.category do
              %h4
                %i.fa.fa-tag.fa-1x
                = product.category.name
      %hr.divider
      .row
        .col-lg-6.col-sm-6
          %span.span-less-margin
            %h4
              %small Author:
              = link_to product.user do
                = product.user.decorate.fullname        

  .col-lg-3.col-lg-offset-1
    - if product.reviews.any?
      %h3
        %i.fa.fa-star
        reviews from users
      = render reviews

      .text-center
        = will_paginate product.reviews, renderer: BootstrapPagination::Rails

    - else
      %h3
        %i.fa.fa-question
        no reviews by far!

    - if current_user
      .rendered-form
        .page-header
          %h2
            Rate
            %small and review!
        = render 'reviews/form'

.row
  .col-lg-5.col-lg-offset-1
    = link_to 'Back to products', category_path(product.category), class: 'btn btn-default'
