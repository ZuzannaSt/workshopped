%h1 Listing categories
%br

.row
  - if is_admin
    %span
      = link_to new_category_path do
        %i.fa.fa-plus
        New category
%br

.row
  - categories.each_slice(4) do |slice|
    - slice.each do |category|
      .col-lg-3.text-center
        =link_to category do
          .thumbnail.list-group
            %i.fa.fa-tag.fa-3x
            %h2= category.name
        - if is_admin
          .list-group
            %span
              = link_to edit_category_path(category) do
                %i.fa.fa-pencil
                Edit
            %span
              = link_to category, method: :delete, data: { confirm: 'Are you sure?' } do
                %i.fa.fa-trash
                Destroy
.text-center
  = will_paginate categories, renderer: BootstrapPagination::Rails

= link_to 'Back to the home page', root_path, class: 'btn btn-default'
