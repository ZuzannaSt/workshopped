= form_for category do |f|
  - if category.errors.any?
    #error_explanation
      %h2= "#{pluralize(category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - category.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    .input-group
      .input-group-addon Name
      = f.text_field :name, class: 'form-control', autofocus: true, placeholder: "Category name"

  = f.submit 'Save', class: 'btn btn-success pull-right'
